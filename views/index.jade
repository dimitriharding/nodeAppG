extends layout

block content
    h3(style='text-align: center' class='green-text text-darken-1')= title
    p(style='text-align: center') Welcome to ExpressJS/NodeJS App

    // Wrapper
    #wrapper(class='container')
        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h4 User List
        #userList
            table(class='hoverable')
                thead
                    th UserName
                    th Email
                    th Delete
                tbody
        // /USER LIST
        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser(class='btn green darken-1') Add User
        // /ADD USER
    // /WRAPPER